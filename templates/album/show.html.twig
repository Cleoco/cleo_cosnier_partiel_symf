{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ album.nom }}</h1>
    <div class="filet"></div>

        <div class="album_info d-flex">
            <div class="album_pochette col-7">
                <img class="ml-0"src="{{ album.pochette }}" alt="">
            </div>
            <div class="album_data d-flex flex-column ml-5">
                <div class="btn_action">
                <a class=" btn btn-primary"href="{{ path('album_index') }}">Retourner aux albums</a>
                </div>
                <h2 class="mb-4">Informations :</h2>
        
                <p><span>Artiste : </span> 
                {{ album.artiste }}</p>
                
                <p> <span>Sorti : </span> 
                {{ album.sorti ? album.sorti|date('d/m/Y') : '' }}</p>
            
                <p> <span>Genre : </span> 
                {{ album.category.title }}</p>
      
            </div>
        
          
        </div>
        <div class="album_content ml-3 mr-3 mt-4">
            <h2>Pr√©sentation :</h2>
            <p>{{ album.presentation }}</p>
        </div>

        <div class="btn_action ml-3">
            <a class=" btn btn-success mb-2"href="{{ path('album_edit', {'id': album.id}) }}">Modifier</a>
            {{ include('album/_delete_form.html.twig') }}
        </div>


</div>
{% endblock %}
